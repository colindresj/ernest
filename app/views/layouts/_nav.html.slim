nav.top-bar
  ul.title-area
    li.name
      - if current_user
        h1: a href=("/users/#{current_user.id}") Earnest
      - else
        h1: a href=(root_path) Earnest
    li.toggle-topbar.menu-icon
      a href="#"
        span Menu
  section.top-bar-section
    ul.right
      li.divider
      - if current_user
        li: a href=("/users/#{current_user.id}") #{current_user.email}
        li.divider
        li
          = link_to 'Log Out', logout_path, :method => 'delete'
      - else
        li.divider
        li: a href=(login_path) Log In
        li.divider
        li: a href=(signup_path) Join
